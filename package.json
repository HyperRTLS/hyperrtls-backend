{
  "name": "hyperrtls-backend",
  "version": "0.0.1",
  "description": "",
  "author": "HyperRTLS",
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "rimraf dist && NODE_ENV=production nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=production nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@mikro-orm/core": "5.9.8",
    "@mikro-orm/nestjs": "5.2.3",
    "@mikro-orm/postgresql": "5.9.8",
    "@nestjs/common": "9.4.3",
    "@nestjs/config": "2.3.4",
    "@nestjs/core": "9.4.3",
    "@nestjs/platform-express": "9.4.3",
    "class-transformer": "npm:@nestjs/class-transformer@0.4.0",
    "class-validator": "npm:@nestjs/class-validator@0.13.4",
    "iterare": "1.2.1",
    "mqtt": "4.3.8",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@mikro-orm/cli": "5.9.8",
    "@mikro-orm/migrations": "5.9.8",
    "@nestjs/cli": "9.5.0",
    "@nestjs/schematics": "9.2.0",
    "@nestjs/testing": "9.4.3",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.13",
    "@types/node": "18.19.57",
    "@types/supertest": "2.0.16",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.7.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.10",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.6.3",
    "webpack": "5.78.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  },
  "packageManager": "yarn@3.8.6"
}
